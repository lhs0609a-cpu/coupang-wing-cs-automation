# Coupang API Settings
COUPANG_ACCESS_KEY=your_access_key_here
COUPANG_SECRET_KEY=your_secret_key_here
COUPANG_VENDOR_ID=your_vendor_id_here
COUPANG_WING_ID=your_wing_id_here
COUPANG_API_BASE_URL=https://api-gateway.coupang.com

# Coupang Wing Web Login (for web automation)
COUPANG_WING_USERNAME=your_wing_username_here
COUPANG_WING_PASSWORD=your_wing_password_here

# Database
DATABASE_URL=sqlite:///./coupang_cs.db

# Redis (Optional - for advanced features)
REDIS_URL=redis://localhost:6379/0

# OpenAI
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4

# Security
SECRET_KEY=your_secret_key_for_jwt_here_use_long_random_string
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Application
DEBUG=True
LOG_LEVEL=INFO
ENVIRONMENT=development

# Validation
CONFIDENCE_THRESHOLD=80.0
AUTO_APPROVE_THRESHOLD=90.0
MAX_RESPONSE_LENGTH=1000

# Rate Limiting
INQUIRY_CHECK_INTERVAL=300
MAX_RETRIES=3
RETRY_DELAY=5

# Scheduler
AUTO_START_SCHEDULER=True

# Email Notifications (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_email_password
SMTP_FROM=your_email@gmail.com
ALERT_EMAIL_RECIPIENTS=["admin@example.com"]
REPORT_EMAIL_RECIPIENTS=["admin@example.com","manager@example.com"]

# Slack Notifications (Optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
