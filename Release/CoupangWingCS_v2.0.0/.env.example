# Coupang API Settings
COUPANG_ACCESS_KEY=your_access_key_here
COUPANG_SECRET_KEY=your_secret_key_here
COUPANG_VENDOR_ID=your_vendor_id_here
COUPANG_WING_ID=your_wing_id_here
COUPANG_API_BASE_URL=https://api-gateway.coupang.com

# Database Settings
DATABASE_URL=postgresql://user:password@localhost:5432/coupang_cs_db
# For SQLite (Development)
# DATABASE_URL=sqlite:///./coupang_cs.db

# Redis Settings (for Celery)
REDIS_URL=redis://localhost:6379/0

# OpenAI Settings (Optional - for AI-powered responses)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4

# Security Settings
SECRET_KEY=your_secret_key_for_jwt_here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Application Settings
DEBUG=True
LOG_LEVEL=INFO
ENVIRONMENT=development

# Validation Settings
CONFIDENCE_THRESHOLD=80
AUTO_APPROVE_THRESHOLD=90
MAX_RESPONSE_LENGTH=1000

# Rate Limiting
INQUIRY_CHECK_INTERVAL=300  # seconds (5 minutes)
MAX_RETRIES=3
RETRY_DELAY=5
